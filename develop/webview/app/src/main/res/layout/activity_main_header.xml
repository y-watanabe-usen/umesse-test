<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="com.usen.umembers.ui.viewmodel.MainActivityViewModel" />
        <variable
            name="viewModel"
            type="com.usen.umembers.ui.viewmodel.MainActivityViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/global_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/header_button_home"
            android:layout_width="@dimen/activity_header_button_home_width"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_home_margin_start"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center"
            android:enabled="@{!viewModel.isHomeChecked}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/selector_global_menu_summary"
            android:textOff="@null"
            android:textOn="@null"
            android:textSize="0sp"
            android:textColor="@color/white"
            android:checked="@={viewModel.isHomeChecked}"
            android:onClick="@{() -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_HOME)}"
            />
        <CheckBox
            android:id="@+id/header_button_weather"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_margin_start"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toEndOf="@+id/header_button_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_padding_start"
            android:paddingEnd="@dimen/activity_header_button_padding_end"
            android:background="@drawable/selector_global_menu"
            android:drawableLeft="@drawable/icon_anaritikusu_tian_qi"
            android:enabled="@{!viewModel.isWeatherChecked}"
            android:button="@null"
            android:text="@string/global_menu_button_weather_text"
            android:textSize="@dimen/activity_header_button_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isWeatherChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_WEATHER)}"
            />
        <CheckBox
            android:id="@+id/header_button_analytics"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_margin_start"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toEndOf="@+id/header_button_weather"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_padding_start"
            android:paddingEnd="@dimen/activity_header_button_padding_end"
            android:background="@drawable/selector_global_menu"
            android:drawableLeft="@drawable/icon_anaritikusu_fen_xi"
            android:enabled="@{!viewModel.isAnalyticsChecked}"
            android:button="@null"
            android:text="@string/global_menu_button_analytics_text"
            android:textSize="@dimen/activity_header_button_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isAnalyticsChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_ANALYTICS)}"
            />
        <CheckBox
            android:id="@+id/header_button_cart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_margin_start"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toEndOf="@+id/header_button_analytics"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_padding_start"
            android:paddingEnd="@dimen/activity_header_button_padding_end"
            android:background="@drawable/selector_global_menu"
            android:drawableLeft="@drawable/icon_anaritikusu_maii_wu"
            android:enabled="@{!viewModel.isCartChecked}"
            android:button="@null"
            android:text="@string/global_menu_button_cart_text"
            android:textSize="@dimen/activity_header_button_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isCartChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_CART)}"
            />
        <CheckBox
            android:id="@+id/header_button_subsidy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_margin_start"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toEndOf="@+id/header_button_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_padding_start"
            android:paddingEnd="@dimen/activity_header_button_padding_end"
            android:background="@drawable/selector_global_menu"
            android:drawableLeft="@drawable/icon_anaritikusu_sapoto"
            android:enabled="@{!viewModel.isSubsidyChecked}"
            android:button="@null"
            android:text="@string/global_menu_button_subsidy_text"
            android:textSize="@dimen/activity_header_button_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isSubsidyChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_SUBSIDY)}"
            />
        <CheckBox
            android:id="@+id/header_button_service"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_margin_start"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toEndOf="@+id/header_button_subsidy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_padding_start"
            android:paddingEnd="@dimen/activity_header_button_padding_end"
            android:background="@drawable/selector_global_menu"
            android:drawableLeft="@drawable/icon_anaritikusu_sapoto_1"
            android:enabled="@{!viewModel.isServiceChecked}"
            android:button="@null"
            android:text="@string/global_menu_button_service_text"
            android:textSize="@dimen/activity_header_button_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isServiceChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_SERVICE)}"
            />
        <CheckBox
            android:id="@+id/header_button_question"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginStart="@dimen/activity_header_button_margin_start"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toEndOf="@+id/header_button_service"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_padding_start"
            android:paddingEnd="@dimen/activity_header_button_padding_end"
            android:background="@drawable/selector_global_menu"
            android:drawableLeft="@drawable/icon_anaritikusu_sapoto_2"
            android:enabled="@{!viewModel.isQuestionChecked}"
            android:button="@null"
            android:text="@string/global_menu_button_question_text"
            android:textSize="@dimen/activity_header_button_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isQuestionChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_QUESTION)}"
            />
        <CheckBox
            android:id="@+id/header_button_account"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_button_height"
            android:layout_marginTop="@dimen/activity_header_button_margin_top"
            android:layout_marginBottom="@dimen/activity_header_button_margin_bottom"
            android:layout_marginEnd="@dimen/activity_header_button_account_margin_end"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/activity_header_button_account_padding_start"
            android:background="@drawable/selector_global_menu"
            android:gravity="center_vertical|end"
            android:drawableLeft="@drawable/rectangle_copy_20"
            android:enabled="@{!viewModel.isMyPageChecked}"
            android:button="@null"
            android:text="@={viewModel.shopName}"
            android:textSize="@dimen/activity_header_button_account_font_size"
            android:textColor="@color/white"
            android:checked="@={viewModel.isMyPageChecked}"
            android:onClick="@{(view) -> viewModel.onGlobalMenuClicked(MainActivityViewModel.MENU_MYPAGE)}"
            app:error="@{@drawable/rectangle_copy_20}"
            app:imageUrl="@{viewModel.shopImageAbsoluteUrl}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
