<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usen.umembers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.UMApplication"
        android:allowBackup="false"
        android:icon="@drawable/umembers_icon_rect"
        android:roundIcon="@drawable/umembers_icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.FullScreenMovieActivity"
            android:label="@string/title_activity_full_screen_movie"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver android:name=".MdmIntentReceiver">
            <intent-filter>
                <action android:name="com.usen.custom_action_usen_cd" />
            </intent-filter>
        </receiver>
    </application>

</manifest>