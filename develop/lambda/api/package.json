{
  "name": "umesse-api",
  "description": "U MESSE RESTful API",
  "version": "0.0.1",
  "private": true,
  "main": "lambda.js",
  "dependencies": {
    "aws-serverless-express": "^3.3.8",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "oas3-tools": "^2.0.2"
  },
  "devDependencies": {
    "umesse-lib": "file:../layer/umesse-lib",
    "jest": "^26.6.3"
  },
  "scripts": {
    "build": "npm install --no-save $(npm pack ../layer/umesse-lib/ | tail -1)",
    "build:prod": "npm install --production",
    "pretest": "sh ./__tests__/data/init.sh",
    "test": "jest -i",
    "coverage": "jest --coverage"
  },
  "jest": {
    "verbose": false,
    "testMatch": [
      "**/__tests__/*.test.js"
    ]
  }
}
